{% endblock %}

{% block menu %}
    {% if status == 'masuk' %}
        <div class="panel panel-default">
            <div class="panel-heading">Postingan</div>
            <div class="list-group"></div>
        </div>
    {% endif %}
{% endblock %}

{% block head %}
    <style>
		.konten {
			white-space: pre-wrap;
		}
    </style>
{% endblock %}